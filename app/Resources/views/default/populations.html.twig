{% extends '::base.html.twig' %}
{% block body %}
    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>continent</th>
            <th>population</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.continent }}</td>
                <td>{{ entity.population }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}