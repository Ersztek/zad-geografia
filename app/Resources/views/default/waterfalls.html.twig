{% extends '::base.html.twig' %}
{% block body %}
    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Number of drops</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.number_of_drops }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}