{% extends '::base.html.twig' %}
{% block body %}
    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Length</th>
        </tr>
        <tr>
            <th>#</th>
            <th>Kuroshio</th>
            <th>333</th>
        </tr>
        <tr>
            <th>#</th>
            <th>Labrador</th>
            <th>222</th>
        </tr>
        <tr>
            <th>#</th>
            <th>Alaska</th>
            <th>444</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}